<view>
  <!-- 订单详情 -->
  <view class='order-info'>
    <view class='order-info-title'>订单详情</view>
    <view class='cart-list-box' wx:for="{{cartList}}" wx:key="unique">
      <view class='list-info'>
        <view>{{item.name}}</view>
        <view class='list-info-size'>{{item.detail}}</view>
      </view>
      <view style='width:50%;padding:10px;'>
        <view style='float:right'>
          <view style='color:#A3A3A3'>x {{item.number}}</view>
          <view>¥ {{item.sum}}.00</view>
        </view>
      </view>
    </view>
    <view class='order-sum'>
      <label>总计 </label>
      <label class='order-sum-number activity-color'>¥ {{sumMonney}}</label>
    </view>
  </view>
  <!-- <radio-group name="radio" class="ftn-radio" bindchange="selectRadio">
    <label><radio value="1" checked="{{type == 1 }}"/>现场</label>
    <label><radio value="0" checked="{{type == 0 }}"/>外卖</label>
  </radio-group> -->
  <!-- 桌号 -->
  <view class='note' wx:if="{{type == 1}}" >
    <label style='font-size:15px;'>桌号</label>
    <input bindinput="bindinput" type='number' maxlength='3' class='picker-text' placeholder='请查看桌子号码'   value="{{tableNumber}}" ></input>
  </view>
 <!-- 外卖地址 -->
  <view class='note' wx:if="{{type == 2}}" >
    <label style='font-size:15px;'>地址</label>
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{locationList}}">
      <view  class='picker-text'>
        当前选择：{{locationList[index]}}
      </view>
    </picker>
  </view>
<!-- 备注 -->
  <view class='note'>
    <label style='font-size:15px;'>备注</label>
    <textarea  placeholder='请输入备注' class='note-text' name="bz" value="{{bz}}"></textarea>
  </view>
<!-- 底部操作栏 -->
  <view class="operate-bar">
    <view class='gouwuche'>
      <view style='padding:5px;display:flex'>
        <i class="iconfont icon-gouwuchefill gouwuche-icon activity-color">
          <span class="number-msg" wx:if="{{cartList.length!=0}}">{{cupNumber}}</span>
        </i>
        <view class='gouwuche-price' style='color:white;font-size:18px'>¥ {{sumMonney}}.00</view>
      </view>
    </view>
    <view class="submit-btn activity-color-bg" bindtap='goPay'  wx:if="{{type == 1}}">
      <view class="submit-btn-label color-white">提交</view>
    </view>
    <view class="submit-btn activity-color-bg" bindtap='goPay'  wx:if="{{type == 2}}">
      <view class="submit-btn-label color-white">去支付</view>
    </view>
  </view>
</view>